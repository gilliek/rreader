source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'

gem 'haml-rails'

# https://github.com/joliss/jquery-ui-rails
gem 'jquery-ui-rails'

# https://github.com/pauldix/feedzirra
# http://railscasts.com/episodes/168-feed-parsing
gem 'feedzirra'

# use the fork instead of the original one (https://github.com/damog)
# because of Nokogiri
gem 'feedbag', :git => "git://github.com/dwillis/feedbag.git"

gem 'devise'

# http://railsapps.github.io/twitter-bootstrap-rails.html
gem 'bootstrap-sass' # sass version of the Bootstrap Twitter

# https://github.com/bokmann/font-awesome-rails
# http://fortawesome.github.io/Font-Awesome/#
gem 'font-awesome-rails' # awesome UI elements !

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

gem 'opml-parser'

